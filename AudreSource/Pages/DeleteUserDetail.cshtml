@page
@model AudreSource.Pages.DeleteUserDetailModel
@{
}


<div class="card">
  
    <div class="card-body">
        <form method="post">
            <div class="container">
                <input type="hidden" asp-for="UserDetail.UserDetailsID" />
                <div class="row mb-3">
                    <div class="col">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" id="Address" class="form-control" asp-for="UserDetail.Address">
                        <span asp-validation-for="UserDetail.Address" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label for="Country" class="form-label">Country</label>
                        <input type="text" id="Country" class="form-control" asp-for="UserDetail.Country">
                        <span asp-validation-for="UserDetail.Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="Nationality" class="form-label">Nationality</label>
                        <input type="text" id="Nationality" class="form-control" asp-for="UserDetail.Nationality">
                        <span asp-validation-for="UserDetail.Nationality" class="text-danger"></span>
                    </div>
               </div>
                <div class="row">
                    <div class="col">
                        <button class="btn btn-danger" type="submit">Delete UsersDetails</button>
                        <a class="btn btn-secondary" asp-page="/UserDetailList">Back to List</a>
                    </div>
                </div>
             </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}