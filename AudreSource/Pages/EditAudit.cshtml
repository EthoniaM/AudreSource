@page "{id:int}"
@model AudreSource.Pages.EditAuditModel

<h4>Edit Audit</h4>
<form method="post">
    <div class="form-group">
        <label asp-for="Audit.AuditTitle" class="control-label"></label>
        <input asp-for="Audit.AuditTitle" class="form-control" />
        <span asp-validation-for="Audit.AuditTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Audit.AuditDescription" class="control-label"></label>
        <textarea asp-for="Audit.AuditDescription" class="form-control"></textarea>
        <span asp-validation-for="Audit.AuditDescription" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Audit.AuditID" />
    <button type="submit" class="btn btn-primary">Edit</button>
    <a class="btn btn-secondary" asp-page="/AuditList">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
