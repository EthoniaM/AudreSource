@page "{id:int}"
@model AudreSource.Pages.DeleteOrganisationModel
@{
    ViewData["Title"] = "Delete Organisation";
}

<h4>Delete Organisation</h4>
<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="container">
                <input type="hidden" asp-for="Organisation.OrganisationID" />
                <div class="row mb-3">
                    <div class="col">
                        <label for="OrganisationName" class="form-label">OrganisationName</label>
                        <input type="text" id="OrganisationName" class="form-control" asp-for="Organisation.OrganisationName">
                        <span asp-validation-for="Organisation.OrganisationName" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label for="Representative" class="form-label">Representative</label>
                        <input type="text" id="Representative" class="form-control" asp-for="Organisation.Representative">
                        <span asp-validation-for="Organisation.Representative" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" id="Address" class="form-control" asp-for="Organisation.Address">
                        <span asp-validation-for="Organisation.Address" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label for="ContactNumber" class="form-label">ContactNumber</label>
                        <input type="number" id="ContactNumber" class="form-control" asp-for="Organisation.ContactNumber">
                        <span asp-validation-for="Organisation.ContactNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label for="Domain" class="form-label">Domain</label>
                        <input type="text" id="Domain" class="form-control" asp-for="Organisation.Domain">
                        <span asp-validation-for="Organisation.Domain" class="text-danger"></span>
                    </div>
                <div class="row">
                    <div class="col">
                        <button class="btn btn-danger" type="submit">Delete Organisation</button>
                        <a class="btn btn-secondary" asp-page="/OrganisationsList">Back to List</a>
                    </div>
                </div>
            </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}