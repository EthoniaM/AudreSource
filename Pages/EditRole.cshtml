@page "{id:int}"
@model AudreSource.Pages.EditRoleModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Edit Role</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="RoleInfo.RoleID" />
            <div class="form-group">
                <label asp-for="RoleInfo.Role"></label>
                <input asp-for="RoleInfo.Role" class="form-control" />
                <span asp-validation-for="RoleInfo.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleInfo.RoleDescription"></label>
                <textarea asp-for="RoleInfo.RoleDescription" class="form-control"></textarea>
                <span asp-validation-for="RoleInfo.RoleDescription" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-secondary" asp-page="/RolesList">Back to List</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}