@page "{auditId:int?}"
@model AudreSource.Pages.EditTaskModel


@{
    ViewData["Title"] = "Edit Task";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .form-control,
    .form-select {
        background-color: #f0f0f0; /* Light grey background */
        color: #333; /* Text color */
    }
</style>
        
            <form method="post">
                <input type="hidden" asp-for="Task.KanBanID" />
                <input type="hidden" asp-for="Task.AuditID" />

                <div class="row">
                    <!-- Task Title -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Task.TaskTitle"></label>
                            <input asp-for="Task.TaskTitle" class="form-control" />
                            <span asp-validation-for="Task.TaskTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Task.Status"></label>
                            <select asp-for="Task.Status" class="form-control">
                                <option value="">Select Status</option>
                                <option>Not Started</option>
                                <option>In Progress</option>
                                <option>Completed</option>
                            </select>
                            <span asp-validation-for="Task.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Priority -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Task.Priority"></label>
                            <select asp-for="Task.Priority" class="form-control">
                                <option value="">Select Priority</option>
                                <option>Low</option>
                                <option>Medium</option>
                                <option>High</option>
                            </select>
                            <span asp-validation-for="Task.Priority" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Task Description -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Task.TaskDescription"></label>
                            <textarea asp-for="Task.TaskDescription" class="form-control"></textarea>
                            <span asp-validation-for="Task.TaskDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Start Date -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Task.StartDate"></label>
                            <input asp-for="Task.StartDate" class="form-control" type="date" />
                            <span asp-validation-for="Task.StartDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- End Date -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Task.EndDate"></label>
                            <input asp-for="Task.EndDate" class="form-control" type="date" />
                            <span asp-validation-for="Task.EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
        <button type="submit" class="btn btn-success">Save Changes</button>
                    <a href="@Url.Page("/KanbanBoard", new { auditId = Model.Task.AuditID })" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
