@page "{id:int}"
@model AudreSource.Pages.DeleteTaskModel

<div class="container">
    <div class="card">
        <div class="card-header">
            <h4>Delete Task</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete the task titled "@Model.Task.TaskTitle"?</h5>

            <form method="post">
                <input type="hidden" asp-for="Task.KanBanID" />
                <input type="hidden" asp-for="Task.AuditID" />

                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Page("/KanbanBoard", new { auditId = Model.Task.AuditID })" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
