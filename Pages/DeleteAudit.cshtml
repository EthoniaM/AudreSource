@page "{id:int}"
@model AudreSource.Pages.DeleteAuditModel
@{
    ViewData["Title"] = "Delete Audit";
}

<h2>Delete Audit</h2>
<h4>Are you sure you want to delete this audit?</h4>

<form method="post">
    <div class="form-group">
        <label asp-for="Audit.AuditTitle" class="control-label"></label>
        <input asp-for="Audit.AuditTitle" class="form-control" readonly />
        <span asp-validation-for="Audit.AuditTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Audit.AuditDescription" class="control-label"></label>
        <textarea asp-for="Audit.AuditDescription" class="form-control" readonly></textarea>
        <span asp-validation-for="Audit.AuditDescription" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Audit.AuditID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/KanbanBoard" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
